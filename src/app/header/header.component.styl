.Header
    width: 100%
    height 3.5em
    padding: 2.5em 4em
    display: flex
    justify-content: space-between
    align-items: center
    position: fixed
    top 0
    z-index 20
    &-Main
        &-List
            display: flex
            align-items: center
            list-style none
            &-Item
                display: block
                &-Link
                    font-family: 'Roboto', 'sans-serif'
                    font-weight: 400
                    font-size: .8em
                    color: #000
                    text-decoration: none
                    padding: .8em
                    margin-right: .8em

    &-Language
        &-List
            display: flex
            align-items: center
            list-style none
            p
                font-size: .8em
                font-weight: 400
                font-family: 'Roboto', 'sans-serif'
                margin-right: 1em
            &-Item
                display: block
                &-Link
                    font-size: .8em
                    font-weight: 400
                    text-decoration: none
                    color #000
                    font-family: 'Roboto', 'sans-serif'
                    padding: .8em
                    margin-right: .8em
                    img
                        width: 1.8em